<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                        <EditText android:hint="Nome"
                            android:id="@+id/formulario_nome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText android:hint="Curso"
                            android:id="@+id/formulario_curso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText android:hint="Telefone"
                            android:id="@+id/formulario_telefone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <EditText android:hint="E-mail"
                            android:id="@+id/formulario_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RatingBar
                            android:id="@+id/formulario_nota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:max="10"
                            android:layout_gravity="center"/>

